{
  "build": {
    "beforeBuildCommand": "npm install",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../"
  },
  "package": {
    "productName": "Video Space",
    "version": "1.2.0"
  },
  "plugins": {
    "deepLink": {
      "mobile": [],
      "desktop": {
        "schemes": [
          "video-space"
        ]
      }
    },
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "all",
          "cmd": true,
          "args": true
        }
      ]
    }
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true
      },
      "window": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": [
          {
            "protocol": "http",
            "domain": "localhost"
          },
          {
            "protocol": "https"
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.video-space.app",
      "category": "Productivity",
      "copyright": "Copyright Â© 2024 Video Space Team",
      "resources": ["icons/*"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      }
    },
    "security": {
      "csp": "default-src 'self' data: https://* http://localhost:* ws://localhost:* wss://localhost:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://* http://localhost:*; connect-src 'self' https://* http://localhost:* ws://localhost:* wss://localhost:*; media-src 'self' blob: data: https://* http://localhost:*; frame-src 'self' https://* http://localhost:*;"
    },
    "windows": [
      {
        "label": "main",
        "title": "Video Space",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "fullscreen": false,
        "theme": "system"
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}